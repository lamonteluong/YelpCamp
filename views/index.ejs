<% include partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <p>Our most popular campgrounds</p>
        </div>
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure img-thumbnail">
                    <img class="figure-img img-fluid" src="<%= campground.image %>">
                    <figcaption class="figure-caption text-center">
                        <strong><%= campground.name %></strong>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </figcaption>
                </figure>
            </div>
        <% }); %>
    </div>

    <% include partials/footer %>
</div>


