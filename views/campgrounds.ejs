<% include partials/header %>

<div class="container">

    <div class="jumbotron">
        <header>
            <h1>Campgrounds page</h1>
        </header>
    
        <button type="button" class="btn-primary btn-lg" href="/campgrounds/new">Add New Campground</button>
    </div>
    
    <div class="container">
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-6 col-lg-3">
                    <img src="<%= campground.image %>" class="img-thumbnail">
                    <h4><%= campground.name %></h4>
                </div>
            <% }); %>
        </div>
    </div>

    <% include partials/footer %>
</div>


